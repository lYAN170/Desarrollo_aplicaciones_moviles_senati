<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarritoApp.MainPage">

    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="Bienvenido" FontSize="24" HorizontalOptions="Center" />

            <StackLayout Padding="10">
                <Button Text="Gestión de Productos" Clicked="OnProductosClicked" />
                <Button Text="Gestión de Categorías" Clicked="OnCategoriasClicked" />
                <Button Text="Departamentos" Clicked="OnDepartamentosClicked" />
                <Button Text="Provincias"
                Clicked="OnProvinciasClicked" />
            </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>

    
    
