<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarritoApp.View.ProductoEditPage"
             Title="ProductoEditPage">
    <StackLayout Padding="10">
        <Label Text="Nombre del Producto"/>
        <Entry x:Name="NombreEntry"/>

        <Label Text="Precio"/>
        <Entry x:Name="PrecioEntry" Keyboard="Numeric"/>

        <Label Text="Categoría"/>
        <Picker x:Name="CategoriaPicker"/>

        <Button Text="Crear Nueva Categoría" Clicked="OnCreateCategoryClicked"/>

        <Button Text="Guardar" Clicked="OnSaveClicked"/>
    </StackLayout>
</ContentPage>